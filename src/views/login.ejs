<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar Conta - Entrar</h1>
      <p class="text-center lead">Realize seu login ou crie sua conta abaixo</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg my-5">
          <h4>Realize seu cadastro</h4>
          <p>Caso não possua conta, preencha o formulário:</p>
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
          <div class="form-group">  
            <label>Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>

        <div class="col-lg my-5">
          <h4>Entrar no sistema</h4>
          <p>Caso possua uma conta, realize seu login.</p>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
          <div class="form-group">  
            <label>Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>